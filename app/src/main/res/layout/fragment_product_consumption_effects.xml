<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.ProductConsumptionEffectsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:text="Nutritional scores:"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutri-Score: "
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView_nutriscore_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova-Score: "
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView_novascore_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:elegantTextHeight="true"
        android:text="By consuming this, your intake of nutrients will increase like this:"
        android:textSize="18sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_carbohydrates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/carbs_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_carbohydrates_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_sugars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/sugars_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_sugars_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/fats_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_fat_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_saturated_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/saturated_fats_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_saturated_fat_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/proteins_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_proteins_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_fiber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/fiber_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_fiber_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_salt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/salt_name"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView_salt_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_energy_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/calories_name"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView_energy_kcal_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>
</LinearLayout>
</ScrollView>